<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/bookmark_charity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Charity Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bookmark_total_contribution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total contributed: $0.00"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/bookmark_charity_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bookmark_percent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bookmark_total_contribution"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/bookmark_percent_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@id/bookmark_total_contribution"
        app:layout_constraintStart_toEndOf="@id/bookmark_percent_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

