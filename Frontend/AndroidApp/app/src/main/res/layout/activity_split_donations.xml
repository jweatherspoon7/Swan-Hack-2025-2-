<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SplitDonationsActivity">

    <TextView
        android:id="@+id/split_donations_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allocate Your Donations"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/split_donations_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose what percentage of your donations goes to each charity."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/split_donations_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/split_donations_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/split_donations_subtitle"
        app:layout_constraintBottom_toTopOf="@id/split_donations_save_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/split_donations_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Allocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

